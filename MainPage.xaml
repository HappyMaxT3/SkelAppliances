<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SkelAppliences"
             x:Class="SkelAppliences.MainPage">

    <ScrollView>
        <Grid RowDefinitions="*, Auto">

            <!-- Список сообщений -->
            <CollectionView x:Name="MessagesList"
                            ItemsSource="{Binding Messages}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="5">
                            <Label Text="{Binding Text}" TextColor="BlueViolet" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <!-- Добавлен Swipe Gesture -->
                <CollectionView.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped"/>
                </CollectionView.GestureRecognizers>
            </CollectionView>

            <!-- Поле ввода + кнопки -->
            <Grid Grid.Row="1" ColumnDefinitions="*, Auto, Auto">
                <Entry x:Name="MessageEntry" Placeholder="Введите сообщение..." />
                <Button Text="📩" Clicked="SendMessage_Clicked" Grid.Column="1" />
                <Button Text="🎙" Clicked="RecordVoice_Clicked" Grid.Column="2" />
            </Grid>

        </Grid>
    </ScrollView>

</ContentPage>
